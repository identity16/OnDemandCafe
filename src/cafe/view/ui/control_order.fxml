<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root type="javafx.scene.control.ListCell" xmlns="http://javafx.com/javafx/8.0.5" xmlns:fx="http://javafx.com/fxml">
	<graphic>
		<VBox alignment="TOP_CENTER" prefHeight="87.0" prefWidth="195.0">
			<Label fx:id="titleLabel" prefHeight="33.0" prefWidth="182.0" text="Beverage Name" textOverrun="CLIP">
				<VBox.margin>
					<Insets top="10.0"/>
				</VBox.margin>
				<font>
					<Font name="SansSerif Regular" size="15.0"/>
				</font>
			</Label>
			<HBox alignment="CENTER" prefHeight="54.0" prefWidth="195.0">
				<Button fx:id="minusBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
						nodeOrientation="LEFT_TO_RIGHT" prefHeight="30.0" prefWidth="30.0"
						style="-fx-background-color: rgb(52, 73, 94);" text="-" textAlignment="CENTER"
						textFill="WHITE">
					<HBox.margin>
						<Insets right="5.0"/>
					</HBox.margin>
					<font>
						<Font name="SansSerif Bold" size="15.0"/>
					</font>
				</Button>
				<TextField fx:id="amountField" prefHeight="30.0" prefWidth="50.0">
					<font>
						<Font name="SansSerif Bold" size="15.0"/>
					</font>
				</TextField>
				<Button fx:id="plusBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
						nodeOrientation="LEFT_TO_RIGHT" prefHeight="30.0" prefWidth="30.0"
						style="-fx-background-color: rgb(52, 73, 94);" text="+" textAlignment="CENTER"
						textFill="WHITE">
					<HBox.margin>
						<Insets left="5.0"/>
					</HBox.margin>
					<font>
						<Font name="SansSerif Bold" size="15.0"/>
					</font>
				</Button>
				<Button fx:id="deleteBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
						nodeOrientation="LEFT_TO_RIGHT" prefHeight="30.0" prefWidth="50.0"
						style="-fx-background-color: rgb(231, 76, 60);" text="삭제" textAlignment="CENTER"
						textFill="WHITE">
					<HBox.margin>
						<Insets left="15.0"/>
					</HBox.margin>
					<font>
						<Font name="SansSerif Bold" size="13.0"/>
					</font>
				</Button>
			</HBox>
		</VBox>
	</graphic>
</fx:root>
